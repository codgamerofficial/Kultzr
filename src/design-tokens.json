    "easing": {
      "standard": {
        "value": "cubic-bezier(0.2, 0.8, 0.2, 1)",
        "css": "transition-timing-function: cubic-bezier(0.2, 0.8, 0.2, 1);",
        "description": "Standard easing for most transitions"
      },
      "sharp": {
        "value": "cubic-bezier(0.4, 0, 0.2, 1)",
        "css": "transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);",
        "description": "Sharp easing for exits and disappearing elements"
      },
      "entrance": {
        "value": "cubic-bezier(0, 0, 0.2, 1)",
        "css": "transition-timing-function: cubic-bezier(0, 0, 0.2, 1);",
        "description": "Easing for entering elements"
      }
    },
    "examples": {
      "button_hover": {
        "property": "transform, background-color",
        "duration": "120ms",
        "easing": "standard"
      },
      "modal_enter": {
        "property": "opacity, transform",
        "duration": "240ms",
        "easing": "entrance",
        "keyframes": "opacity: 0 -> 1, scale: 0.9 -> 1"
      },
      "add_to_cart": {
        "type": "spring",
        "stiffness": 220,
        "damping": 18,
        "description": "Product fly-to-cart animation"
      }
    },
    "react_native": {
      "timing": {
        "config": "{ duration: 240, easing: Easing.bezier(0.2, 0.8, 0.2, 1) }"
      },
      "spring": {
        "config": "{ stiffness: 220, damping: 18, mass: 1 }"
      }
    }
  },

