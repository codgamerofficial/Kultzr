  "motion": {
    "description": "Animation timings and easing curves",
    "durations": {
      "instant": { "value": 0, "ms": "0ms", "usage": "Instant state changes" },
      "fast": { "value": 120, "ms": "120ms", "usage": "Micro-interactions, hover states" },
      "normal": { "value": 240, "ms": "240ms", "usage": "Standard transitions, modals" },
      "slow": { "value": 360, "ms": "360ms", "usage": "Page transitions, complex animations" }
